@import '/style/colorUI/main.wxss';
@import '/style/colorUI/animation.wxss';
@import '/style/colorUI/icon.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.bg-main{
  background-color: var(--main);
  color:var(--white);
}
.text-main{
  color: var(--main);
}
.text-underline{
  text-decoration:underline;
}
.voice{
  font-size: 80rpx;
  line-height: 120rpx;
  width: 120rpx;
  height: 120rpx;
}
.footer{
  z-index:10;
  position: fixed;
  bottom: 0;
  left: 0;
  right:0;
  padding-bottom: calc(50rpx + constant(safe-area-inset-bottom) / 2);  
  padding-bottom: calc(50rpx + env(safe-area-inset-bottom) / 2); 
}
.footer-btns{
  padding-bottom: calc(250rpx + constant(safe-area-inset-bottom) / 2);  
  padding-bottom: calc(250rpx + env(safe-area-inset-bottom) / 2); 
}

.safe-bottom{  
  padding-bottom: calc(50rpx + constant(safe-area-inset-bottom) / 2);  
  padding-bottom: calc(50rpx + env(safe-area-inset-bottom) / 2); 
}
