<view class="bg-main radius-xl padding margin">
  <view class="flex align-center">
    <image src="{{statics.pic?domain+statics.pic:'/images/head.png'}}" class="cu-avatar round lg"></image>
    <view class="text-white margin-left">{{statics.name||"照护师"}}</view>

  </view>
  <view class="flex margin-top-xl text-center align-center">
    <view class="flex-sub margin-right-xl">
      <view>{{statics.times||0}}</view>
      <view>服务次数</view>
    </view>
    <text class="cuIcon-titles"></text>
    <view class="flex-sub margin-left-xl">
      <view>{{statics.sum||0}}</view>
      <view>服务人数</view>
    </view>
  </view>
</view>

<view class="flex text-center margin-top padding">
  <view class="flex-sub" bindtap="toUrl" data-url="/pages/patient/list">
    <image style="width: 120rpx; height: 120rpx;" src="/images/custom.png"></image>
    <view>客户管理</view>
  </view>
  <view class="flex-sub" bindtap="toUrl" data-url="/pages/summary/list">
    <image style="width: 120rpx; height: 120rpx;" src="/images/summarize.png"></image>
    <view>康复小结</view>
  </view>
  <view class="flex-sub" bindtap="toUrl" data-url="/pages/homework/list">
    <image style="width: 120rpx; height: 120rpx;" src="/images/homework.png"></image>
    <view>作业布置</view>
  </view>

</view>


<view class="flex text-center bg-white shadow tabbar">  
  <view class="flex-sub" bindtap="toWork">
    <view class='cuIcon-cu-image padding-top-sm'>
      <image  src="/images/pelvic.png"></image>
    </view>
    <view class="footer-des text-gray">工作台</view>
  </view>

  <view class="flex-sub">
    <view class='cuIcon-cu-image padding-top-sm'>
      <image  src="/images/tab1-1.png"></image>
    </view>
    <view class="footer-des text-black">个人中心</view>
  </view>
</view>